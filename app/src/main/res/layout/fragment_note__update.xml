<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/updateNoteFrameLayout"
    tools:context=".View.fragmentView.Note_Update">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:id="@+id/updateNoteLayout"
        android:background="@drawable/white_out_line"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/backspace_ic"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="50dp"
            app:tint="@color/white" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Note"
            android:textSize="30sp"
            android:layout_marginVertical="10dp"
            android:gravity="center"
            android:textColor="#ffff"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:textSize="10sp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Title"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/dialog_title"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/out_line_shape"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_marginTop="10dp"
        android:textColor="#ffff"
        android:textSize="10sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:hint="Description"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:lines="6"
            android:id="@+id/edit_text"
            android:background="@drawable/out_line_shape"
            android:gravity="top|left"
            android:textColor="@color/white"
            android:autoLink="all"
            android:maxLines="20"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:layout_marginTop="15dp"
        android:textColor="#ffff"
        android:textSize="10sp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/statusTextEd"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/out_line_shape"
            android:maxLines="1"
            />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="OK"
            android:id="@+id/btn_dialog_Ok"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/text_dialog"
            android:layout_marginVertical="20dp"
            android:background="@drawable/two_color_shape"
            android:drawableStart="@drawable/baseline_check_24"
            android:drawableTint="@color/white"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="CANCLE"
            android:id="@+id/btn_dialog_cancle"
            android:gravity="center_vertical|center_horizontal"
            android:layout_below="@+id/text_dialog"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/two_color_shape"
            android:drawableStart="@drawable/baseline_check_24"
            android:drawableTint="@color/white"
            android:drawablePadding="10dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffffff" />

    </LinearLayout>

    </LinearLayout>

</FrameLayout>