<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:maxHeight="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="7dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="10dp"
        app:cardMaxElevation="4dp"
        app:cardPreventCornerOverlap="true"
        android:backgroundTintMode="multiply"
        android:background="@drawable/out_line_shape"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp"
            android:id="@+id/note_Item_Linear"
            android:background="@drawable/out_line_shape"

            >
            <TextView
                android:id="@+id/titleNoteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this Note"
                android:textSize="20dp"
                android:textColor="#9A9C27B0"
                android:textStyle="bold"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@drawable/circle_two_colored"
                />
            <TextView
                android:id="@+id/descriptionNoteTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not app create a usin full function and for the android application in java language"
                android:textSize="10sp"
                android:maxHeight="270dp"
                android:maxLines="7"
                android:layout_marginTop="7dp"
                android:width="350dp"
                android:textColor="#C5BFBF"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/startTimeTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Satday 30 December"
                    android:textColor="@color/primaryColor"
                    android:textSize="9sp"
                    android:textStyle="italic"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    android:id="@+id/deleteButtonNote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_ic"
                    android:tintMode="multiply"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/primaryColor" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>